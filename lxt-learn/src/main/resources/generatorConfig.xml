<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE generatorConfiguration  
	  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"  
	  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">  
      
<generatorConfiguration>  
	<context id="Mysql2Tables" targetRuntime="MyBatis3"> 
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"  
			connectionURL="jdbc:mysql://localhost:3306/lxt_db"  
			userId="root"  
			password="root">  
		</jdbcConnection>  
      
		<javaTypeResolver >  
			<property name="forceBigDecimals" value="false" />  
		</javaTypeResolver>  
      
		<javaModelGenerator targetPackage="com.lxt.ms.designpattern.model" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />  
			<property name="trimStrings" value="true" />  
		</javaModelGenerator>  
      
		<sqlMapGenerator targetPackage="com.lxt.ms.designpattern.mapper" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />  
		</sqlMapGenerator>  
      
		<javaClientGenerator type="XMLMAPPER" targetPackage="com.lxt.ms.designpattern.mapper" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />  
		</javaClientGenerator>  
      
		<table schema="lxt_db" tableName="lxt_rule" domainObjectName="Rule" enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true" enableSelectByExample="true" selectByExampleQueryId="true"></table>
	</context>
</generatorConfiguration>  